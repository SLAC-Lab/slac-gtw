<?php

/**
 * Implements hook_install().
 */
function slac_igp_master_install() {
  for ($i = 7001; $i < 7200; $i++) {
    $function_name = 'slac_igp_master_update_' . $i;
    if (function_exists($function_name)) {
      $function_name();
    }
    else {
      return;
    }
  }
}

